<Window x:Class="kaorun.samples.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="WpfScreenCaptureTest" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Button Grid.Row="0" Content="Capture" Click="Button_Click"/>
        <Image Grid.Row="1" Source="{Binding Captured}" MaxHeight="240"/>
    </Grid>
</Window>

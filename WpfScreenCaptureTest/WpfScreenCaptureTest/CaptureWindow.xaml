<Window x:Class="kaorun.samples.CaptureWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CaptureWindow" Height="300" Width="300"
        WindowStyle="None"
        Background="Transparent"
        AllowsTransparency="true"
        WindowState="Maximized"
        >
    <Grid Name="LayoutRoot">
        <Rectangle Name="selectionRect" Fill="CornflowerBlue" Opacity="0.3" Width="0"/>
        <Border Name="bkgRect"  Background="CornflowerBlue" Opacity="0.01"/>
    </Grid>
</Window>
